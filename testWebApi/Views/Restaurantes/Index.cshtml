
@{
    ViewBag.Title = "Restaurantes";
}

<h2>Restaurantes</h2>
<hr />

<table id="gvRestaurantes" class="table table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th data-column-id="Id_Restaurante" data-type="numeric">ID</th>
            <th data-column-id="Restaurante">Nombre</th>
            <th data-column-id="commands" data-formatter="commands" data-sortable="false">Acciones</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td></td>
            <td></td>
            <td></td>
        </tr>

    </tbody>
</table>
<div class="text-right">
    <button class="btn btn-default btn-block" id="btnNuevoRestaurante" 
            data-toggle="modal" data-target="#pnlRestaurante" >Nuevo Restautante</button>
</div>

<!-- Modal Alta-->
<div class="modal fade" id="pnlRestaurante" role="dialog">
    <div class="modal-dialog">
        <!-- Contenido-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="idTituloVentanaRestuarantes"></h4>
            </div>
            <div class="modal-body" id="idContenidoVentanaRestaurantes">
                Cargando...
            </div>
        </div>
    </div>
</div>

@section scripts
{

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/views/restaurantes")
    
}

